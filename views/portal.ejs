    <title>Customer Portal Dashboard</title>
    <style>
      /* Styles for the main dashboard container */
      .dashboard-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 50px auto;
        max-width: 1200px;
      }

      /* Styles for the dashboard header */
      .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding: 20px 50px;
        background-color: #f0f0f0;
        border-radius: 5px 5px 0 0;
      }

      /* Styles for the dashboard title */
      .dashboard-title {
        font-size: 32px;
        font-weight: bold;
        color: #333;
      }

      /* Styles for the dashboard navigation */
      .dashboard-navigation {
        display: flex;
        align-items: center;
      }

      /* Styles for the navigation links */
      .dashboard-navigation a {
        display: block;
        margin: 0 10px;
        font-size: 18px;
        color: #333;
        text-decoration: none;
      }

      /* Styles for the active navigation link */
      .dashboard-navigation a.active {
        font-weight: bold;
        color: #ff4c68;
      }

      /* Styles for the dashboard content */
      .dashboard-content {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: flex-start;
        width: 100%;
        padding: 50px;
        background-color: #fff;
        border-radius: 0 0 5px 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
      }

      /* Styles for the dashboard cards */
      .dashboard-card {
        flex-basis: calc(33.33% - 20px);
        margin-bottom: 30px;
        background-color: #f0f0f0;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        overflow: hidden;
      }

      /* Styles for the card header */
      .dashboard-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background-color: #ff4c68;
        color: #fff;
      }

      /* Styles for the card title */
      .dashboard-card-title {
        font-size: 24px;
        font-weight: bold;
        margin: 0;
      }

      /* Styles for the card content */
      .dashboard-card-content {
        padding: 20px;
      }

      /* Styles for the card button */
      .dashboard-card-button {
        display: block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #fff;
        color: #ff4c68;
        border: 2px solid #ff4c68;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.3s ease;
      }

      /* Styles for the card button hover state */
      .dashboard-card-button:hover {
        background-color: #ff4c68;
        color: #fff;
      }
    </style>
  </head>
